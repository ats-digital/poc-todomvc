<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ATS poc{% endblock %}</title>
        {% block metas %}
            <meta name="keywords" content="" />
            <meta name="description" content="">
            <meta name="author" content="">
            <!-- Mobile Metas -->
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}
        {% block stylesheets %}
            {% stylesheets
            'assets/theme/css/bootstrap.min.css'
            'assets/theme/css/font-awesome.min.css'
            'assets/theme/css/sb-admin-2.css'
            filter='cssrewrite'
            %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Please Sign In</h3>
                        </div>
                        <div class="panel-body">
                            {% block fos_user_content %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}
            {% javascripts
                'assets/theme/js/jquery.min.js'
                'assets/theme/js/bootstrap.min.js'
                'assets/theme/js/metisMenu.min.js'
                'assets/theme/js/sb-admin-2.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>